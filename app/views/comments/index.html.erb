<h1>This is Comment#index</h1>

<% @comment.each do |comment| %>
  <p><%= comment.comment %>
  | <%= comment.user.name %>
  | <%= link_to('Show', comment_path(article)) %>

  <% if can? :modify, comment %>
  | <%= link_to('Edit', edit_comment_path(article)) %>
  | <%= link_to('Delete', comment_path(comment), method: :delete, data: {confirm: 'Are you sure?'}) %>
  <% end %>

  </p>
<% end %>

